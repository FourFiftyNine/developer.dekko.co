-locals.title = 'Login'
article
  h1 Login

  form(method="post", id="login", action="/profile/login")
    .field.input
      label(for="email") Your Email
      input(type="email", name="email", id="email")
    .field.input
      label(for="password") Password
      - if(locals.user_message_status)
        input(type="password", name="password", id="password", class="invalid-input")
        .error-message Please enter a valid email or password or <a href="/profile/recover">recover</a> your password</a>
      - else
        input(type="password", name="password", id="password")
    .field.checkbox
      input(type="checkbox", name="remember", id="remember", value="test")
      label(for="remember") Remember my email on this computer

    input(type="submit", value="login", class="btn")

aside#sidebar
  h3 Don't have an account?
  a(title="Sign Up now!", href="/sign-up") Sign Up now!

  h3 Did you forget your password?
  a(title="Download 1", href="/recover") Recover it here.
